
<div class="row">
  <div class="col-md-12">
    <p class="">
      <h1 class="display-4 text-center"><%= @punto.title %></h1>
    </p>

  </div>
</div>
    <% if @punto.fotospunto.any? %>
      <div class="row">
        <div data-controller="zoom">
          <div data-target="zoom.pictures">
            <% @punto.fotospunto.each do |foto| %>
              <div class="col-md-4"><%= image_tag(foto.url, class: "img-fluid fotos gallery-items", alt: @punto.title ) %></div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </p>


<div class="row">
  <div class="col-md-12">
    <p> <h2> <%= @punto.subtitle %> </h2> </p>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <p><%= simple_format(@punto.description) %></p>
  </div>

</div>

<div class="row cards">
  <div class="col-md-4">
    <div id="map">
      <iframe
        width="100%"
        height="300"
        frameborder="0" style="border:0"
        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDKVHaq85J1cJcT1nZjehdz85Ha3iIs5IY
          &q=<%=@punto.mlon%>,<%=@punto.mlat%>&zoom=16&language=es" allowfullscreen>
      </iframe>

    </div>
  </div>
  <div class="col-md-8 cards">
    <p>
      <%= fa_icon('clock', class: "text-info") %><strong>  Horario:</strong>
      <%= @punto.schedule %>
    </p>

    <p>
      <%= fa_icon('money-bill-alt', class: "text-success") %>
      <strong>Precio:</strong>
      <% if @punto.price == "" || @punto.price == nil || @punto.price == 0 %>
        Gratuito
      <% else %>
        <%= @punto.price %><span> € </span>
      <% end %>
    </p>

    <p>
      <%#= fa_icon "info-circle 2x", class: "text-primary"  %>
      <%= fa_icon('info-circle', class: "text-warning") %><strong>  Información:</strong></br>
      <%= @punto.info %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-md-12 cards">
    <% unless @punto.video.blank? %>
    <p class="text-center cards">
      <iframe width="560" height="315" src="<%= @punto.video %>" frameborder="0" allowfullscreen></iframe>
    </p>
    <% end %>
  </div>
</div>

<div class="text-center h3 cards">
  <%= link_to 'Volver', mapas_path %>
</div>

<% superadmins_only do %>
  <div class="text-muted">
    Ruta del punto: <strong><%= request.fullpath %></strong>
  </div>
<% end %>

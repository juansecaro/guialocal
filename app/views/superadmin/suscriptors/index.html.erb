<header>
  <h1>Suscriptores</h1>
<% superadmins_only do %>
  <ul class="actions">
    <li><%#= link_to "Nueva categoría", new_superadmin_category_path, class: "new" %></li>
  </ul>
<% end %>
</header>

<table class=" table table-striped table-responsive">
  <thead>
    <tr>
      <th>E-mail</th>
      <th>Confirmación</th>
      <th>Desde</th>
      <th>Editar</th>
      <th>Borrar</th>
      <th colspan="3"></th>
    </tr>

  </thead>
  <tbody>
    <% @suscriptors.each do |suscriptor| %>
      <tr>
        <td><%= suscriptor.email %></td>
        <td class="text-center">
          <% if suscriptor.email_confirmation? %>
            <span class="badge badge-success">Confirmado</span>
          <% else %>
            <span class="badge badge-danger">Pendiente</span>
          <% end %>
        </td>
        <td><%= time_format_mini(suscriptor.updated_at) %></td>

        <td class="text-center">
          <%= link_to edit_superadmin_suscriptor_path suscriptor do %>
            <%= fa_icon "edit" %>
          <% end %>
        </td>
        <td  class="text-center">
          <%= link_to superadmin_suscriptor_path(suscriptor), method: :delete, data: {confirm: "¿Estás seguro de que quieres borrarlo?"} do %>
            <%= fa_icon "trash" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

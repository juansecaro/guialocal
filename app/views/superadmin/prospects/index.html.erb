<header>
  <h1>Listado de prospects</h1>
</header>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th class="text-center">Status</th>
      <th class="text-center">DNI</th>
      <th class="text-center">Nombre</th>
      <th class="text-center">Apellidos</th>
      <th class="text-center">Fase de abandono</th>
      <th class="text-center">E-Mail</th>
      <th class="text-center">Fecha</th>
      <th class="text-center"></th>
    </tr>
  </thead>

  <tbody>
    <% @prospects.each do |prospect| %>
      <tr>
          <% case (prospect.status )%>
          <% when 'completed' %>
          <td class="text-center"><span class="badge badge-pill badge-success">Prioritario</span></td>
          <% when 'sign_up' %>
          <td class="text-center"><span class="badge badge-pill badge-warning">Recuperable</span></td>
          <% when 'business_details' %>
          <td class="text-center"><span class="badge badge-pill badge-warning">Recuperable</span></td>
          <% when 'user_details' %>
          <td class="text-center"><span class="badge badge-pill badge-warning">Recuperable</span></td>
          <% when 'archived' %>
          <td class="text-center"><span class="badge badge-pill badge-secondary">Archivado</span></td>
          <% end %>

        <td class="text-center"><%= prospect.dni if prospect %></td>
        <td class="text-center"><%= prospect.user_first_name if prospect.user_first_name %></td>
        <td class="text-center"><%= prospect.user_last_name if prospect.user_last_name %></td>
        <td class="text-center"><%= prospect.status %></td>
        <td class="text-center"><%= prospect.user_email if prospect.user_email %></td>
        <td class="text-center"><%= time_format_mini_mini prospect.updated_at if prospect %></td>
        <td class="text-center"><%= link_to "Consultar", edit_superadmin_prospect_path(prospect) %></td>
      </tr>

    <% end %>
  </tbody>
</table>



<header>
  <h1>Imágenes en portada</h1>
<% superadmins_only do %>
  <ul class="actions">
    <li><%= link_to "Nuevo destacado", new_superadmin_destacado_path, class: "new" %></li>
  </ul>
<% end %>
</header>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Imagen</th>
      <th>Titulo</th>
      <th>Info</th>
    </tr>
  </thead>

  <tbody>
    <% @destacados.each do |destacado| %>
      <tr>
        <td><%= image_tag destacado.imgdestacado.url, class: "img-fluid img-thumbnail" if destacado.imgdestacado?  %></td>
        <td><%= destacado.titulo %></td>
        <td><%= destacado.info %></td>
        <td>
          <%= link_to "Ver", superadmin_destacado_path(destacado) %> |
          <%= link_to "Editar", edit_superadmin_destacado_path(destacado) %> |
          <%= link_to "Borrar", superadmin_destacado_path(destacado), method: :delete, data: {confirm: "¿Estás seguro de que quieres borrarla?"} %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
  <div class="col-md-6">

    <div class="progress">
      <div class="progress-bar" role="progressbar" style="width: 90%" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100"></div>
    </div>

    <h1>Detalles finales</h1>

    <%= form_with model: @prospect, url: wizard_path, local: true, method: :put do |f| %>

    <div class="form-group">
      <label>Fecha de nacimiento</label></br>
        <%= f.date_select :user_birthday, :start_year => Date.current.year, :end_year => 1920, required: true %>
    </div>

    <div class="form-group">
      <label>Dirección física de contacto</label></br>
      <%= f.text_field :user_address, required: true %>
      <!-- <small id="emailHelp" class="form-text text-muted">Usaremos siempre el E-mail para todos los procesos y comunicaciones.</small> -->
    </div>

    <div class="form-group">
      <label>Código de Cuenta Corrienta IBAN</label></br>
      <%= f.text_field :iban_code, required: true, size: 40 %>
      <!-- <small id="emailHelp" class="form-text text-muted">Usaremos siempre el E-mail para todos los procesos y comunicaciones.</small> -->
    </div>

    <div class="form-group form-check">
      <%= f.check_box :conditions_accepted, class: "form-check-input", required: true %>
      <label class="form-check-label">Acepto las <%= link_to "condiciones de uso responsable", condicionesdeuso_path, target: "_blank" %></label>
    </div>



    <p><%= f.submit "Terminar", class: "btn btn-primary" %></p>
    <% end %>

    <small class="form-text text-muted">Recibirás un e-mail al terminar.</small>
  </div>
</div>

<div class="row">
  <div class="col-md-6">

    <div class="progress">
      <div class="progress-bar" role="progressbar" style="width: 33%" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100"></div>
    </div>

    <h1>Solicitud de Alta</h1>

    <%= form_with model: @prospect, url: wizard_path, local: true, method: :put do |f| %>

    <div class="form-group">
      <label>E-mail</label></br>
        <%= f.text_field :user_email, as: :email, required: true %>
    </div>

    <div class="form-group">
      <label>Nombre</label></br>
      <%= f.text_field :user_first_name, required: true %>
      <!-- <small id="emailHelp" class="form-text text-muted">Usaremos siempre el E-mail para todos los procesos y comunicaciones.</small> -->
    </div>

    <div class="form-group">
      <label>Apellidos</label></br>
      <%= f.text_field :user_last_name, required: true %>
      <!-- <small id="emailHelp" class="form-text text-muted">Usaremos siempre el E-mail para todos los procesos y comunicaciones.</small> -->
    </div>

    <div class="form-group">
      <label>DNI</label></br>
      <%= f.text_field :dni, required: true %>
      <!-- <small id="emailHelp" class="form-text text-muted">Usaremos siempre el E-mail para todos los procesos y comunicaciones.</small> -->
    </div>

    <div class="form-group">
      <label>Tel√©fono de contacto</label></br>
      <%= f.text_field :user_phone, required: true %>
      <!-- <small id="emailHelp" class="form-text text-muted">Usaremos siempre el E-mail para todos los procesos y comunicaciones.</small> -->
    </div>

      <p>
        <%= f.submit "Siguiente", class: "btn btn-primary" %>
      </p>
    <% end %>

    <small class="form-text text-muted">Usaremos siempre el E-mail para todos los procesos en esta plataforma</small>
  </div>
</div>
